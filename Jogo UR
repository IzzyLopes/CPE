#include <iostream>
#include <stdlib.h>
#include <time.h>
#include <locale.h>
using namespace std;

void tabuleiro (string A[16],string B[16], string C[13]) {
	A[4] = " * ";
	A[14] = " * ";
	B[4] = " * ";
	B[14] = " * ";
	C[8] = " * ";
	A[0] = "INI";
	A[15] = "FIM";	
	B[0] = "INI";
	B[15] = "FIM";
	
	//OBS para nn estragar o jogo
	A[8] = " * ";
	B[8] = " * ";
	C[4] = " * ";
	C[14] = " * ";
	
	for (int i=5; i<13; i++) {
		A[i] = "   ";
		B[i] = "   ";
	}
	
	for (int i=0; i<5; i++) {
		C[i] = "   ";
	}
	
	cout << "\t\t\t\t\t" << "--------------------------------------" << endl;
	cout << "\t\t\t\t\t" << "|    " << A[4] << "    |     " << C[5] << "    |    " << B[4] << "    |" << endl;
	cout << "\t\t\t\t\t" << "|------------------------------------|" << endl;
	cout << "\t\t\t\t\t" << "|    " << A[3] << "    |     " << C[6] << "    |    " << B[3] << "    |" << endl;
	cout << "\t\t\t\t\t" << "|------------------------------------|" << endl;
	cout << "\t\t\t\t\t" << "|    " << A[2] << "    |     " << C[7] << "    |    " << B[2] << "    |" << endl;
	cout << "\t\t\t\t\t" << "|------------------------------------|" << endl;
	cout << "\t\t\t\t\t" << "|    " << A[1] << "    |     " << C[8] << "    |    " << B[1] << "    |" << endl;
	cout << "\t\t\t\t\t" << "|------------------------------------|" << endl;
	cout << "\t\t\t\t\t" << "     " << A[0] << "    |     " << C[9] << "    |    " << B[0] << "     " << endl;
	cout << "\t\t\t\t\t" << " \t    --------------       \t" << endl;
	cout << "\t\t\t\t\t" << "     " << A[15] << "    |     " << C[10] << "    |    " << B[15] << "     " << endl;
	cout << "\t\t\t\t\t" << "|------------------------------------|" << endl;
	cout << "\t\t\t\t\t" << "|    " << A[14] << "    |     " << C[11] << "    |    " << B[14] << "    |" << endl;
	cout << "\t\t\t\t\t" << "|------------------------------------|" << endl;
	cout << "\t\t\t\t\t" << "|    " << A[13] << "    |     " << C[12] << "    |    " << B[13] << "    |" << endl;
	cout << "\t\t\t\t\t" << "--------------------------------------" << endl;
}

int dados (int dado1, int dado2, int dado3, int dado4) {
	srand(time(NULL));
	int resultado=0;

    if (dado1 == 1)
    	resultado = resultado + 1;
	if (dado2 == 1)
    	resultado = resultado + 1;
    if (dado3 == 1)
    	resultado = resultado + 1;
    if (dado4 == 1)
    	resultado = resultado + 1;
    
    return resultado;
}

